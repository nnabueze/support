                <ul class="nav nav-tabs" data-toggle="tabs">
                    <li class="active"><a href="#block-tabs-home">IGR Login</a></li>
                    <li><a href="#block-tabs-profile">School</a></li>
                    <li><a href="#block-tabs-settings" data-toggle="tooltip" title="Settings">Admin Login</a></li>
                </ul>
            </div>
            <!-- END Block Tabs Title -->
            <!-- Tabs Content -->
            <div class="tab-content">
                <div class="tab-pane active" id="block-tabs-home">


                    @if (ViewBag.UpdateInformation != null)
                    {
                        <div class="alert alert-success alert-dismissable" style="padding-left:-4em; padding-right:-4em">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            @ViewBag.UpdateInformation
                        </div>
                    }

                    @if (ViewBag.error != null)
                    {
                        <div class="alert alert-danger alert-dismissable" style="padding-left:-4em; padding-right:-4em">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            @ViewBag.error
                        </div>
                    }



                    <!-- END Login Title -->
                    <!-- Login Form -->

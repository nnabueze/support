@model IEnumerable<Support.Models.igr>
@{
    ViewBag.Title = "IGR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="login-container">
    <!-- Login Header -->
    <h1 class="h2 text-light text-center push-top-bottom animation-pullDown">
        <img src="~/Content/img/eCollect.png" height="50" width="150" opacity:.5/>
    </h1>
    <!-- END Login Header -->
    <!-- Login Block -->
    <div class="block animation-fadeInQuick" style="opacity: 0.95;">
        <!-- Login Title -->
        <div class="block-title">
            <h2>Welcome...</h2>
        </div>



        <!-- Block Tabs -->
        <div class="block full">
            <!-- Block Tabs Title -->
            <div class="block-title">
